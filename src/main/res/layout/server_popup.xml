<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffa7c8ff"
    android:weightSum="1"
    android:id="@+id/ServerPopup"
    android:gravity="top|left"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="IP Address:"
        android:id="@+id/txtIP"
        android:layout_weight="0.02"
        android:layout_below="@+id/textView1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Server Configuration"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="198dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:text="10.0.2.2"
        android:layout_below="@+id/textView1"
        android:layout_toRightOf="@+id/butContPW"
        android:background="#ffe4ff8d"
        android:layout_alignRight="@+id/textView1"
        android:layout_alignEnd="@+id/textView1"
        android:maxLines="1" />

    <Button
        android:id="@+id/butContPW"
        android:layout_marginTop="36dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Continue"
        android:layout_below="@+id/editText2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/butClosePW"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Close"
        android:layout_alignTop="@+id/butContPW"
        android:layout_alignRight="@+id/editText2"
        android:layout_alignEnd="@+id/editText2" />

    <EditText
        android:layout_width="198dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText2"
        android:text="3333"
        android:background="#ffe4ff8d"
        android:layout_alignTop="@+id/txtPort"
        android:layout_toRightOf="@+id/txtPort"
        android:layout_alignRight="@+id/textView1"
        android:layout_alignEnd="@+id/textView1"
        android:maxLines="1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Port:"
        android:id="@+id/txtPort"
        android:layout_below="@+id/txtIP"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>